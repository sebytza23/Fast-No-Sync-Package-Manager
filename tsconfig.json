{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
